# Database Configuration
DATABASE_URL=postgresql://beauty_user:beauty_pass@postgres:5432/beauty_salon_db

# JWT Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000

# Environment
ENVIRONMENT=development

# Logging
LOG_LEVEL=INFO

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# Yandex Maps API
YANDEX_MAPS_API_KEY=your-yandex-maps-api-key

# Email / SMTP Configuration
# For Gmail: smtp.gmail.com:587, use App Password
# For SendGrid: smtp.sendgrid.net:587
# For Mailgun: smtp.mailgun.org:587
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@aurelle.uz
FROM_NAME=aurelle.uz
EMAIL_ENABLED=false

# SMS Configuration
# SMS Provider: eskiz (Uzbekistan), smsru (Russia/CIS), twilio (International)
SMS_PROVIDER=eskiz
SMS_API_KEY=your-sms-api-key
SMS_API_URL=https://notify.eskiz.uz/api
SMS_SENDER_NAME=aurelle.uz
SMS_ENABLED=false

# Twilio SMS Settings (only if using Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Payment Systems Configuration
# Payme (https://developer.help.paycom.uz/)
PAYME_MERCHANT_ID=your-payme-merchant-id
PAYME_SECRET_KEY=your-payme-secret-key

# Click (https://click.uz/for-developers)
CLICK_SERVICE_ID=your-click-service-id
CLICK_SECRET_KEY=your-click-secret-key

# Uzum (https://uzum.uz/business)
UZUM_MERCHANT_ID=your-uzum-merchant-id
UZUM_SECRET_KEY=your-uzum-secret-key

# Sentry Error Monitoring (https://sentry.io/)
# Get your DSN from: https://sentry.io/settings/[your-org]/projects/[your-project]/keys/
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0
SENTRY_PROFILES_SAMPLE_RATE=1.0

# IMPORTANT: For production deployment
# 1. Generate strong SECRET_KEY (min 32 characters)
# 2. Set ENVIRONMENT=production
# 3. Configure real payment system credentials
# 4. Update DATABASE_URL with production database
# 5. Configure CORS_ORIGINS with production domains
# 6. Set up Sentry DSN for error monitoring (recommended)
# 7. Lower Sentry sample rates (0.1-0.5 for traces/profiles)
# 8. Configure SMTP settings and set EMAIL_ENABLED=true
# 9. Configure SMS provider and set SMS_ENABLED=true
# 10. Start Celery worker and beat for background tasks
