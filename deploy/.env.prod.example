# Production Environment Configuration
# IMPORTANT: Copy to .env and fill with real production values

# PostgreSQL Database
DATABASE_URL=postgresql://beauty_user:CHANGE_THIS_PASSWORD@postgres:5432/beauty_db
POSTGRES_USER=beauty_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=beauty_db

# Redis
REDIS_URL=redis://redis:6379/0

# Security
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
ENVIRONMENT=production
DEBUG=false
ALLOWED_HOSTS=aurelle.uz,www.aurelle.uz,api.aurelle.uz
CORS_ORIGINS=https://aurelle.uz,https://www.aurelle.uz

# Sentry (optional - for error tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# External Services (MVP: all disabled)
# Email
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@aurelle.uz

# SMS (Uzbekistan providers)
SMS_PROVIDER=eskiz  # or playmobile
ESKIZ_EMAIL=
ESKIZ_PASSWORD=

# Payment Providers (MVP: disabled)
PAYME_MERCHANT_ID=
PAYME_SECRET_KEY=
CLICK_MERCHANT_ID=
CLICK_SECRET_KEY=
UZUM_MERCHANT_ID=
UZUM_SECRET_KEY=

# Feature Flags (MVP: all false)
FEATURE_EMAIL_NOTIFICATIONS=false
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PAYMENTS=false
FEATURE_REVIEWS=false
FEATURE_CHAT=false
